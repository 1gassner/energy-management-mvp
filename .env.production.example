# FlowMind Universal Backend - Production Environment Variables

# ==========================================
# SERVER CONFIGURATION
# ==========================================
NODE_ENV=production
HOST=0.0.0.0
PORT=8000

# ==========================================
# FEATURE FLAGS
# ==========================================
AI_MODELS_ENABLED=true
CITYPULSE_ENABLED=true
QUANTUM_SWARM_ENABLED=true
VELOCITY_SWARM_ENABLED=true
WEBSOCKET_ENABLED=true
RATE_LIMITING_ENABLED=true

# ==========================================
# DATABASE & SUPABASE
# ==========================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
DATABASE_URL=postgresql://user:pass@host:port/dbname

# ==========================================
# AUTHENTICATION
# ==========================================
JWT_SECRET=your-super-secure-jwt-secret-min-32-chars
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# ==========================================
# AI API KEYS
# ==========================================
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
GROQ_API_KEY=gsk_your-groq-key

# ==========================================
# CORS & SECURITY
# ==========================================
ALLOWED_ORIGINS=https://flowmind.app,https://quantum.flowmind.app,https://velocity.flowmind.app,https://citypulse.flowmind.app

# ==========================================
# MONITORING & LOGGING
# ==========================================
LOG_LEVEL=info
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ==========================================
# REDIS (for WebSocket scaling)
# ==========================================
REDIS_URL=redis://localhost:6379

# ==========================================
# EXTERNAL SERVICES
# ==========================================
WEBHOOK_SECRET=your-webhook-secret
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=1000

# ==========================================
# SSL & CERTIFICATES (if needed)
# ==========================================
SSL_KEY_PATH=/etc/ssl/private/flowmind.key
SSL_CERT_PATH=/etc/ssl/certs/flowmind.crt