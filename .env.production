# FlowMind Universal Backend - Production Environment Variables

# ==========================================
# SERVER CONFIGURATION
# ==========================================
NODE_ENV=production
HOST=0.0.0.0
PORT=8000

# ==========================================
# FEATURE FLAGS
# ==========================================
AI_MODELS_ENABLED=true
CITYPULSE_ENABLED=true
QUANTUM_SWARM_ENABLED=true
VELOCITY_SWARM_ENABLED=true
WEBSOCKET_ENABLED=true
RATE_LIMITING_ENABLED=true

# ==========================================
# DATABASE & SUPABASE (Demo Configuration)
# ==========================================
SUPABASE_URL=https://demo-citypulse.supabase.co
SUPABASE_SERVICE_ROLE_KEY=demo-service-key-for-testing-only
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/flowmind_universal

# ==========================================
# AUTHENTICATION
# ==========================================
JWT_SECRET=flowmind-universal-backend-secret-key-2025-production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# ==========================================
# AI API KEYS
# ==========================================
OPENAI_API_KEY=sk-demo-openai-key-for-testing
ANTHROPIC_API_KEY=sk-ant-demo-anthropic-key-for-testing
GROQ_API_KEY=gsk_demo-groq-key-for-testing

# ==========================================
# CORS & SECURITY
# ==========================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173,https://citypulse-hechingen.vercel.app,https://flowmind.app

# ==========================================
# MONITORING & LOGGING
# ==========================================
LOG_LEVEL=info
SENTRY_DSN=https://demo@sentry.io/flowmind-universal

# ==========================================
# REDIS (for WebSocket scaling)
# ==========================================
REDIS_URL=redis://localhost:6379

# ==========================================
# EXTERNAL SERVICES
# ==========================================
WEBHOOK_SECRET=flowmind-webhook-secret-2025
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=1000

# ==========================================
# SSL & CERTIFICATES (if needed)
# ==========================================
SSL_KEY_PATH=/etc/ssl/private/flowmind.key
SSL_CERT_PATH=/etc/ssl/certs/flowmind.crt