# Development Environment Configuration
# Copy this file to .env.local and fill in your values

# API Configuration
VITE_API_URL=http://localhost:3001/api
VITE_WS_URL=ws://localhost:3001

# Feature Flags
VITE_USE_MOCK_DATA=true
VITE_ENABLE_AI_FEATURES=false
VITE_ENABLE_ANALYTICS=false

# Security Settings
VITE_JWT_EXPIRY=3600000
VITE_SESSION_TIMEOUT=1800000
VITE_MAX_LOGIN_ATTEMPTS=5

# Monitoring & Analytics (optional in dev)
VITE_SENTRY_DSN=
VITE_GA_MEASUREMENT_ID=
VITE_LOG_LEVEL=debug

# Application Settings
VITE_APP_NAME=Energy Management System
VITE_APP_VERSION=1.0.0
VITE_SUPPORT_EMAIL=support@localhost

# Feature Configuration
VITE_MAX_CHART_DATA_POINTS=100
VITE_REFRESH_INTERVAL=5000
VITE_ENABLE_OFFLINE_MODE=false

# Third-Party Services (optional in dev)
VITE_WEATHER_API_KEY=
VITE_MAPS_API_KEY=

# Public URLs
VITE_PUBLIC_URL=http://localhost:5173
VITE_ASSETS_URL=http://localhost:5173/assets