# Production Environment Configuration
# Energy Management MVP - Production Settings

# API Configuration
VITE_API_URL=https://api.energy-management.your-domain.com/api
VITE_WS_URL=wss://api.energy-management.your-domain.com

# Feature Flags
VITE_USE_MOCK_DATA=false
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_ANALYTICS=true

# Security Settings
VITE_JWT_EXPIRY=3600000
VITE_SESSION_TIMEOUT=1800000
VITE_MAX_LOGIN_ATTEMPTS=5

# Monitoring & Analytics
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX
VITE_LOG_LEVEL=warn

# Application Settings
VITE_APP_NAME=Energy Management System
VITE_APP_VERSION=1.0.0
VITE_SUPPORT_EMAIL=support@your-domain.com

# Feature Configuration
VITE_MAX_CHART_DATA_POINTS=1000
VITE_REFRESH_INTERVAL=30000
VITE_ENABLE_OFFLINE_MODE=true

# Third-Party Services
VITE_WEATHER_API_KEY=your-weather-api-key
VITE_MAPS_API_KEY=your-google-maps-api-key

# Public URLs
VITE_PUBLIC_URL=https://energy-management.your-domain.com
VITE_ASSETS_URL=https://cdn.your-domain.com/assets