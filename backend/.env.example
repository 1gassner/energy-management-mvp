# FlowMind Universal Backend Environment Variables

# Server Configuration
NODE_ENV=development
PORT=8000
HOST=localhost

# Database Configuration (Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=24h

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379

# CORS Configuration
ALLOWED_ORIGINS=https://flowmind.vercel.app,https://citypulse-hechingen.vercel.app,http://localhost:3000,http://localhost:3001,http://localhost:5173

# WebSocket Configuration
WEBSOCKET_CORS_ORIGINS=same-as-ALLOWED_ORIGINS

# AI Provider Configuration (FlowMind)
OPENAI_API_KEY=your-openai-key
ANTHROPIC_API_KEY=your-anthropic-key
GROQ_API_KEY=your-groq-key

# Feature Flags
AI_MODELS_ENABLED=true
CITYPULSE_ENABLED=true
QUANTUM_SWARM_ENABLED=true
VELOCITY_SWARM_ENABLED=true
WEBSOCKET_ENABLED=true
RATE_LIMITING_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Security
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your-session-secret

# External APIs
WEATHER_API_KEY=your-weather-api-key

# Railway Deployment (for production)
RAILWAY_STATIC_URL=https://flowmind-backend.railway.app